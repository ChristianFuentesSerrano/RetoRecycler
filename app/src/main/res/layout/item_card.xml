<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:background="@color/translucent"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvProductDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Este producto es muy bueno por \ntener balalalalalalalalalala"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivProductImage"
        app:layout_constraintLeft_toLeftOf="@id/ivProductImage"
        app:layout_constraintRight_toRightOf="@id/ivProductImage"
        app:layout_constraintBottom_toTopOf="@+id/ivReviewStars"
        />
    <ImageView
        android:id="@+id/ivReviewStars"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductDescription"
        app:layout_constraintLeft_toLeftOf="@id/tvProductDescription"
        app:layout_constraintRight_toLeftOf="@id/ivReviewStars2"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        android:layout_marginTop="4dp"
        />
    <ImageView
        android:id="@+id/ivReviewStars2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductDescription"
        app:layout_constraintLeft_toRightOf="@+id/ivReviewStars"
        app:layout_constraintRight_toLeftOf="@id/ivReviewStars3"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        android:layout_marginTop="4dp"
        />
    <ImageView
        android:id="@+id/ivReviewStars3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductDescription"
        app:layout_constraintLeft_toRightOf="@+id/ivReviewStars2"
        app:layout_constraintRight_toLeftOf="@id/ivReviewStars4"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        android:layout_marginTop="4dp"
        />
    <ImageView
        android:id="@+id/ivReviewStars4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductDescription"
        app:layout_constraintLeft_toRightOf="@+id/ivReviewStars3"
        app:layout_constraintRight_toLeftOf="@id/ivReviewStars5"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        android:layout_marginTop="4dp"
        />
    <ImageView
        android:id="@+id/ivReviewStars5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductDescription"
        app:layout_constraintLeft_toRightOf="@+id/ivReviewStars4"
        app:layout_constraintRight_toRightOf="@id/tvProductDescription"
        app:layout_constraintBottom_toTopOf="@+id/tvPrice"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$00000.00"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/ivReviewStars"
        app:layout_constraintLeft_toLeftOf="@id/tvProductDescription"
        />



</androidx.constraintlayout.widget.ConstraintLayout>